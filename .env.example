# App
NODE_ENV=development
PORT=3000

# PostgreSQL - replace with your own values
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_DATABASE=fx_trading

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT - use a strong random secret in production
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# ExchangeRate-API (https://www.exchangerate-api.com)
EXCHANGE_RATE_API_KEY=your_api_key
EXCHANGE_RATE_API_BASE_URL=https://v6.exchangerate-api.com/v6

# FX cache TTL in seconds (e.g. 3600 = 1 hour)
FX_RATES_CACHE_TTL=3600

# Mail - Option A: Resend. Sign up at https://resend.com, get API key
RESEND_API_KEY=

# Mail - Option B: SMTP (Gmail, Mailgun, etc.). Use your provider's host and credentials
MAIL_HOST=your-smtp-host.example.com
MAIL_PORT=587
MAIL_USER=your-email@example.com
MAIL_PASSWORD=your-smtp-password
MAIL_FROM=FX Trading <your-email@example.com>

# Supported wallet currencies (comma-separated)
SUPPORTED_CURRENCIES=NGN,USD,EUR,GBP

# Admin: comma-separated emails. Users who verify with one of these get ADMIN role.
# To test admin endpoints, set this to your own email, then register and verify with it.
ADMIN_EMAILS=
