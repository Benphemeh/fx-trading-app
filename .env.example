# App
NODE_ENV=development
PORT=3000

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=fx_trading

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# ExchangeRate-API (https://www.exchangerate-api.com)
EXCHANGE_RATE_API_KEY=your_api_key
EXCHANGE_RATE_API_BASE_URL=https://v6.exchangerate-api.com/v6

# FX cache TTL in seconds (e.g. 3600 = 1 hour)
FX_RATES_CACHE_TTL=3600

# Mail - Option A: Resend (no domain verification needed; uses onboarding@resend.dev)
# Sign up at https://resend.com, get API key:
RESEND_API_KEY=

# Mail - Option B: Gmail SMTP (requires 2FA + App Password)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=FX Trading <your-email@gmail.com>

# Mail - Option C: Mailgun SMTP (port 465 = SSL)
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=465
MAIL_USER=postmaster@your-domain.mailgun.org
MAIL_PASSWORD=your-mailgun-smtp-password
MAIL_FROM=FX Trading <no-reply@your-domain.com>

# Supported wallet currencies (comma-separated)
SUPPORTED_CURRENCIES=NGN,USD,EUR,GBP
